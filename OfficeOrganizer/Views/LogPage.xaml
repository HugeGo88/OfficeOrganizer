<Page
    x:Class="OfficeOrganizer.Views.LogPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:OfficeOrganizer.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button Command="{x:Bind ViewModel.LoadLogCommand}" Content="Aktualisieren" />
            <TextBlock
                Padding="10,0,0,0"
                VerticalAlignment="Center"
                Text="{x:Bind ViewModel.LogPath}" />
        </StackPanel>
        <ScrollViewer Grid.Row="1">
            <TextBlock LineHeight="20" Text="{x:Bind ViewModel.LogContent, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        </ScrollViewer>
    </Grid>
</Page>
